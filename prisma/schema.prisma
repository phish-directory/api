generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["tracing"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Permissions {
  basic
  trusted
  admin
}

enum Classifications {
  postal
  banking
  item_scams
  other
}

enum APIs {
  SafeBrowsing
  GoogleWebRisk
  IpQualityScore
  PhishObserver
  PhishReport
  SecurityTrails
  SinkingYachts
  UrlScan
  VirusTotal
  Walshy
  IpQuery
}

enum ExtendedData {
  off
  on
  forced
}

model User {
  id                Int              @id @unique @default(autoincrement())
  uuid              String           @unique @default(uuid())
  name              String
  email             String           @unique
  password          String
  permission        Permissions      @default(basic)
  useExtendedData   ExtendedData     @default(off)
  subscriptionItems String[]         @default([])
  deleted           Boolean          @default(false)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  deletedAt         DateTime?
  expressRequests   ExpressRequest[]
  classifications   Classification[]
  domainsReported   Domain[]
  emailsReported    Email[]
  reportedDomains   DomainReport[]   @relation("reporter")
  reviewedDomains   DomainReport[]   @relation("reviewer")
}

model Domain {
  id              Int              @id @unique @default(autoincrement())
  uuid            String           @unique @default(uuid())
  domain          String
  malicious       Boolean          @default(false)
  reportedBy      User[]
  captures        Capture[]
  classifications Classification[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  lastChecked     DateTime?
  RawAPIData      RawAPIData[]
  reports         DomainReport[]
}

model Email {
  id          Int          @id @default(autoincrement())
  uuid        String       @unique @default(uuid())
  email       String
  malicious   Boolean      @default(false)
  reportedBy  User[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  lastChecked DateTime?
  RawAPIData  RawAPIData[]
}

model ExpressRequest {
  id        Int      @id @default(autoincrement())
  method    String
  url       String
  headers   Json?
  body      Json?
  query     Json?
  ip        String
  userAgent String   @default("")
  xIdentity String   @default("")
  referer   String?
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Capture {
  id        Int      @id @default(autoincrement())
  domain    Domain?  @relation(fields: [domainId], references: [id])
  domainId  Int?
  binary    Bytes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Classification {
  id             Int             @id @default(autoincrement())
  classification Classifications
  domain         Domain          @relation(fields: [domainId], references: [id])
  classifier     User            @relation(fields: [userId], references: [id])
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  domainId       Int
  userId         Int
}

model RawAPIData {
  id        Int      @id @default(autoincrement())
  sourceAPI APIs
  data      Json
  domain    Domain?  @relation(fields: [domainId], references: [id])
  domainId  Int?
  email     Email?   @relation(fields: [emailId], references: [id])
  emailId   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DomainReport {
  id         Int          @id @default(autoincrement())
  domain     Domain       @relation(fields: [domainId], references: [id])
  domainId   Int
  reporter   User         @relation("reporter", fields: [reporterId], references: [id])
  reporterId Int
  reviewer   User?        @relation("reviewer", fields: [reviewerId], references: [id])
  reviewerId Int?
  status     ReportStatus @default(PENDING)
  notes      String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  reviewedAt DateTime?
}

enum AbuseContactType {
  HostingService
  LinkShortener
  Registrar
  Other
}

enum AbuseContactReportMethod {
  Email
  ContactForm
  Discord
  Other
  Unknown
}

model AbuseContact {
  id                   Int                      @id @default(autoincrement())
  name                 String
  type                 AbuseContactType
  reportMethod         AbuseContactReportMethod
  reportContactEmail   String?
  reportContactForm    String?
  reportContactDiscord String?
  reportContactOther   String?
}

enum ReportStatus {
  PENDING
  APPROVED
  REJECTED
}
