{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDirs": ["src", "drizzle"]
  },
  "include": [
    "src/**/*",
    "drizzle/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "resources",
    ".vscode",
    ".husky",
    ".git",
    "playwright.config.ts"
  ]
}