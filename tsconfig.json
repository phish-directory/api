{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "resources",
    ".vscode",
    ".husky",
    ".git",
    "playwright.config.ts"
  ]
}